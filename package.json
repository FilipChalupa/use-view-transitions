{
  "name": "use-view-transitions",
  "version": "1.0.9",
  "description": "A React hook for CSS view transitions",
  "scripts": {
    "dev": "vite examples",
    "build-examples": "vite build examples",
    "build": "esbuild --external:react --external:react-dom --format=cjs --bundle --outdir=dist/cjs --sourcemap=external ./src/*",
    "build:watch": "esbuild --external:react --external:react-dom --format=cjs --bundle --outdir=dist/cjs --sourcemap=inline --watch ./src/*",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "author": "Noam Rosenthal <nrosenthal@chromium.org>",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "exports": {
    "./react": {
      "require": "./dist/cjs/react-vt.js",
      "import": "./src/react-vt.js"
    },
    "./next": {
      "require": "./dist/cjs/next-vt.js",
      "import": "./src/next-vt.js"
    }
  },
  "dependencies": {
    "@types/react": "^18.2.8",
    "@types/react-dom": "^18.2.4",
    "@vitejs/plugin-react": "^4.0.0",
    "esbuild": "^0.17.19",
    "eslint": "^8.42.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "vite": "^4.3.9"
  },
  "files": {
    "include": ["dist/cjs/next-vt.js", "dist/cjs/react-vt.js"]
  }
}
